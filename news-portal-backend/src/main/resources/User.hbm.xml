<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.epam.portal.entity.User" table = "USER_NEWS">

        <meta attribute = "class-description">
            This class contains the user detail.
        </meta>

        <id name = "id" type = "java.lang.Long" column = "ID">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="optimizer">none</param>
                <param name="increment_size">1</param>
                <param name="sequence_name">USER_ID_SEQ</param>
            </generator>
        </id>

        <property name = "login" column = "LOGIN" type = "java.lang.String"/>
        <property name = "password" column = "PASSWORD" type = "java.lang.String"/>
        <property name = "roleId" column = "ROLE_ID" type = "java.lang.Long"/>

    </class>
</hibernate-mapping>